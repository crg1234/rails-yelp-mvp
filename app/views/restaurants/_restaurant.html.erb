<div class="card" id="<%= dom_id restaurant %>" style="width: 18rem;">
  <div class="card-body">
    <p>
      <strong>Name:</strong>
      <%= restaurant.name %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= restaurant.address %>
    </p>

    <p>
      <strong>Phone number:</strong>
      <%= restaurant.phone_number %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= restaurant.category %>
    </p>
  </div>
</div>
