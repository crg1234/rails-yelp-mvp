<h1>New Review For <%= @restaurant.name %></h1>
<p>Did you enjoy your time at the restaurant?</p>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating %>
    <%# <%= f.input :restaurant_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-secondary" %>
  </div>
<% end %>

</br>
<%= link_to "Back to restaurant", restaurant_path(@restaurant) %>
